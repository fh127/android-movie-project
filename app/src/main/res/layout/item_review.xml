<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_review_title_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_autor_container"
        android:layout_marginLeft="@dimen/margin_small_view"
        android:layout_marginStart="@dimen/margin_small_view"
        android:gravity="center"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="@dimen/margin_xsmall"
        tools:text="Autor" />


    <TextView
        android:id="@+id/item_review_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small_view"
        android:layout_marginRight="@dimen/margin_small_view"
        android:layout_marginStart="@dimen/margin_small_view"
        android:layout_marginTop="@dimen/margin_small_view"
        android:gravity="start"
        android:layout_below="@+id/item_review_title_text"
        android:textSize="@dimen/text_medium"
        android:layout_marginBottom="@dimen/margin_small_view"

        tools:text="I would never take it away from anyone, but I was underwhelmed.\r\n\r\n_Final rating:★★ - Definitely not for me, but I sort of get the appeal._" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separator"
        android:background="@color/black"
        android:layout_marginTop="@dimen/margin_small_view"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
